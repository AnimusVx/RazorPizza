@page
@model RazorPizza.Pages.Admin.PizzaOrderListingModel
@{
}

<div class="container">
    <h1 class="text-danger">Pizza Orders</h1>
    <div class="w-50">
        <table class="table table-hover table-dark">
            <thead>
                <tr>
                    <td>Pizza Name</td>
                    <td>Price</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var po in Model.PizzaOrders)
                {
                    <tr>
                        <td>@po.PizzaName</td>
                        <td>@po.Price</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
