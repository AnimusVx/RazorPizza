@page
@model RazorPizza.Pages.Checkout.CheckoutModel
@{
    var imgPath = "~/images/Pizzas/" + Model.ImageTitle + ".png";
}


<div class="container align-content-center">
    <div class="row">
        <div class="col-4 my-auto" align="center">
            <p class="text-justify fw-bold"> We hope you enjoy your meal !!! </p> 
            <p class="mt-1 fw-bold">Don't forget to give us 5 stars.</p>
        </div>
        <div class="col-4 my-auto mx-auto" align="center">
            <h1>Your Order</h1>
            <img class="w-75 mb-2" src="@imgPath" alt="" asp-append-version=true />
            <a class="btn btn-outline-dark mx-auto" asp-page="Thankyou" asp-route-Name="@Model.Name" asp-route-PizzaPrice="@Model.PizzaPrice"> Confirm Order </a>
        </div>
        <div class="col-4 my-auto mx-auto" align="center">
            <p class="fw-bold"> Your Pizza Name: <span>@Model.Name</span></p>
            <p class="mt-1 fw-bold"> Your Pizza Price: <span>@Model.PizzaPrice</span></p>
            <label class="fw-bold">Ingredients: </label> <p>@Model.Contains</p>
        </div>
    </div>
</div>